algoritmo "Soma"
var
   numero1,numero2,soma: inteiro
inicio
      escreva("Me dé um número: ")
      leia (numero1)
      
      escreva("Me dé mais um número: ")
      leia (numero2)
      
      soma<- numero1 + numero2
      
      escreva("Olha essa mágica, vou somar os dois números... e o resultado é...! ",soma)
fimalgoritmo